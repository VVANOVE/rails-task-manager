<h1>MY TASKS</h1>
<p class = "btn btn-primary">Create a new task</p>
<ul>
  <%@tasks.each do |task|%>
  <li>
    <%= link_to task.title, task_path(task) %>
      <%if task.completed %>
        <i class="fas fa-check-square"></i>
      <%else%>
          <i class="fas fa-square"></i>
     <% end %>
  </li>
  <% end %>
</ul>